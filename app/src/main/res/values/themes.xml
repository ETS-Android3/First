    <style name="NoActionTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Modiico este tema en lo que ponga aquÃ­-->
        <item name="android:statusBarColor" tools:targetApi="l">@android:color/darker_gray</item>
